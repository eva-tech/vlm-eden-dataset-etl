# =============================================================================
# VLM Eden Dataset ETL - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.dist .env
# =============================================================================

# -----------------------------------------------------------------------------
# Source Database Configuration (PACS Database)
# -----------------------------------------------------------------------------
SOURCE_DATABASE_NAME=your_source_database_name
SOURCE_DATABASE_USER=your_source_database_user
SOURCE_DATABASE_PASS=your_source_database_password
SOURCE_DATABASE_HOST=your_source_database_host
SOURCE_DATABASE_PORT=5432

# -----------------------------------------------------------------------------
# Destination Database Configuration
# -----------------------------------------------------------------------------
# Note: Currently not used by DICOM pipeline, but kept for compatibility
DESTINATION_DATABASE_NAME=your_destination_database_name
DESTINATION_DATABASE_USER=your_destination_database_user
DESTINATION_DATABASE_PASS=your_destination_database_password
DESTINATION_DATABASE_HOST=your_destination_database_host
DESTINATION_DATABASE_PORT=5432

# -----------------------------------------------------------------------------
# Redis Configuration (Celery Broker and Result Backend)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# AWS S3 Configuration
# -----------------------------------------------------------------------------
# AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION_NAME=us-east-1

# S3 Buckets
# Origin bucket where files are copied from
S3_ORIGIN_BUCKET_NAME=s3-origin-bucket_name
# Destination bucket where files are copied to
S3_BUCKET_NAME=s3-bucket-name

# -----------------------------------------------------------------------------
# Celery Configuration
# -----------------------------------------------------------------------------
# Broker URL (usually same as REDIS_URL)
BROKER_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Flower Dashboard Configuration
# -----------------------------------------------------------------------------
FLOWER_USER=admin
FLOWER_PASSWORD=your_flower_password
LOGGING_LEVEL=INFO
SECRET_KEY=your_secret_key_here

# -----------------------------------------------------------------------------
# Error Tracking (Optional)
# -----------------------------------------------------------------------------
SENTRY_DNS=your_sentry_dsn_here

# -----------------------------------------------------------------------------
# Docker/Image Configuration (Optional - for Docker builds)
# -----------------------------------------------------------------------------
FULL_ECR_REPOSITORY=your-ecr-repository
IMAGE_TAG_NAME=latest
DOCKERFILE=Dockerfile
TARGET=development
DEBUG=False
